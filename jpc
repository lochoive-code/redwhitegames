        // --- è¼”åŠ©å‡½å¼ ---
        function setVideoBackground(url) {
            const v = document.getElementById('video-background');
            const s = v.querySelector('source');
            if(s) { 
                if(s.src !== url) { 
                    s.src = url; 
                    v.load(); 
                    v.play().catch(()=>{}); 
                }
            } else {
                v.src = url;
                v.load(); 
                v.play().catch(()=>{});
            }
        }

        window.stopAllAudio = function() {
            // ç¢ºä¿åœæ­¢æ‰€æœ‰éŸ³è¨Šå’Œå½±ç‰‡ï¼ˆé™¤äº†èƒŒæ™¯å½±ç‰‡ï¼‰
            document.querySelectorAll('audio, video').forEach(el => {
                if(el.id !== 'video-background') { el.pause(); el.currentTime = 0; }
            });
            clearInterval(fastQATimerInterval);
        }
        
        // æ–°å¢ï¼šé—œé–‰ Modal ä¸¦è¿”å›é¦–é 
        window.closeModalAndGoHome = function() {
            stopAllAudio();
            // åŸ·è¡Œ Modal éš±è—å‹•ç•«
            modalWrapper.classList.remove('scale-100', 'opacity-100');
            modalWrapper.classList.add('scale-95', 'opacity-0');
            
            // å»¶é²éš±è— Modal å®¹å™¨ä¸¦è¿”å›é¦–é 
            setTimeout(() => {
                gameModal.classList.add('hidden');
                // éš±è— Menu Modal çš„ Home æŒ‰éˆ•
                modalCloseHomeBtn.classList.add('hidden'); 
                renderHomePage(); 
            }, 300);
        }


        // --- æ ¸å¿ƒé‚è¼¯ï¼šå¡ç‰‡ç¿»è½‰èˆ‡å…§å®¹å±•ç¤º (ç”¨æ–¼ç´…ç™½å¤§æ­Œæ˜Ÿ) ---
        window.flipCard = function(cardId) {
            const card = cardData.find(c => c.id === cardId);
            if (!card) return;

            // 1. ç¿»è½‰å¡ç‰‡è¦–è¦º (è‹¥æ˜¯ç¬¬ä¸€æ¬¡)
            if (!card.isFlipped) {
                const cardEl = document.getElementById(`card-${cardId}`);
                if (cardEl) {
                    cardEl.classList.add('is-flipped');
                    card.isFlipped = true;
                }
            }

            // 2. é–‹å•Ÿå…§å®¹ Modal
            openContentModal(card);
        }

        function openContentModal(card) {
            stopAllAudio(); 

            // éš±è— Menu Modal çš„ Home æŒ‰éˆ• (å› ç‚ºé¡Œç›®å¡ç‰‡å…§éƒ¨æœ‰è‡ªå·±çš„ X æŒ‰éˆ•)
            modalCloseHomeBtn.classList.add('hidden');

            // æ¢å¾© Modal wrapper æ¨£å¼ç‚ºé¡Œç›®å¡ç‰‡æ¨¡å¼ (è¼ƒå¤§)
            modalWrapper.classList.remove('max-w-lg', 'max-w-md', 'border-red-600');
            modalWrapper.classList.add('max-w-2xl', 'border-yellow-400');
            
            // è¨­å®š Modal å…§å®¹
            modalContent.innerHTML = getGameContentHTML(card);
            
            // è®“ Modal å½ˆå‡º
            gameModal.classList.remove('hidden');
            
            // åŸ·è¡Œ Modal å½ˆå‡ºå‹•ç•«
            setTimeout(() => {
                modalWrapper.classList.remove('scale-95', 'opacity-0');
                modalWrapper.classList.add('scale-100', 'opacity-100');
            }, 10);
            
            lucide.createIcons();
        }

        window.closeContentModal = function() {
            stopAllAudio();
            // åŸ·è¡Œ Modal éš±è—å‹•ç•«
            modalWrapper.classList.remove('scale-100', 'opacity-100');
            modalWrapper.classList.add('scale-95', 'opacity-0');
            
            // é‡è¨­ Modal wrapper ç‚ºé è¨­å°ºå¯¸ (ç”¨æ–¼é¡Œç›®å¡ç‰‡)
            modalWrapper.classList.remove('max-w-lg', 'max-w-md', 'border-red-600');
            modalWrapper.classList.add('max-w-2xl', 'border-yellow-400');

            // å»¶é²éš±è— Modal å®¹å™¨
            setTimeout(() => {
                gameModal.classList.add('hidden');
            }, 300); 
        }

        // --- HTML å…§å®¹ç”Ÿæˆå™¨ (å·²å„ªåŒ– D é¡åˆ¥) ---
        function getGameContentHTML(card) {
            // é¡Œç›®å¡ç‰‡å…§éƒ¨çš„é—œé–‰æŒ‰éˆ•
            const closeBtn = `
                <button onclick="closeContentModal()" class="absolute top-4 right-4 text-gray-400 hover:text-white transition z-20">
                    <i data-lucide="x-circle" class="w-8 h-8"></i>
                </button>
            `;
            
            let content = '';
            const category = CATEGORY_COLORS[card.col];
            const label = `${CATEGORY_LETTERS[card.col]}${card.row + 1}`;

            // A: éŸ³æ¨‚é¡Œ
            if (card.col === 0) {
                const data = MUSIC_ANSWERS[card.row] || {};
                content = `
                    <div class="p-6 md:p-8 flex flex-col items-center text-center relative w-full bg-gray-800 rounded-lg">
                        ${closeBtn}
                        <h3 class="text-3xl font-bold text-red-400 mb-2">${category.name} - ${label}</h3>
                        <p class="text-lg text-gray-300 mb-6">è«‹è†è½éŸ³æ¨‚ä¸¦å›ç­”æ­Œåèˆ‡æ­Œæ‰‹</p>
                        
                        <div class="w-full max-w-lg bg-gray-900 p-4 rounded-xl border border-red-500/30 mb-6 shadow-xl">
                            <!-- ç§»é™¤ autoplay -->
                            <audio id="active-audio" controls src="${data.audio}" class="w-full mb-2"></audio>
                            <p class="text-xs text-yellow-500">ğŸ”Š è«‹æ‰‹å‹•é»æ“Šæ’­æ”¾</p>
                        </div>

                        <div id="answer-box" class="hidden w-full max-w-lg bg-red-900/40 p-4 rounded-lg border border-red-500 mb-4 animate-expand">
                            <p class="text-sm text-red-400 font-bold">æ­£ç¢ºç­”æ¡ˆ</p>
                            <p class="text-2xl font-bold text-white mt-1">${data.song || 'è³‡æ–™éºå¤±'}</p>
                            <p class="text-md text-gray-300">${data.artist || ''}</p>
                        </div>

                        <button onclick="document.getElementById('answer-box').classList.remove('hidden'); this.classList.add('hidden');" class="px-8 py-3 bg-red-600 hover:bg-red-700 text-white font-bold rounded-full shadow-lg transition transform hover:scale-105">
                            <i data-lucide="eye" class="w-5 h-5 inline-block mr-2"></i> çœ‹ç­”æ¡ˆ
                        </button>
                    </div>
                `;
            }
            // B: æ­Œè©å¡«ç©º (å°‡éŸ³è¨Šç§»è‡³å•é¡Œå€)
            else if (card.col === 1) {
                const data = GAP_FILL_ANSWERS[card.row] || {};
                content = `
                    <div class="p-6 md:p-8 flex flex-col items-center text-center relative w-full bg-gray-800 rounded-lg">
                        ${closeBtn}
                        <h3 class="text-3xl font-bold text-blue-400 mb-4">${category.name} - ${label}</h3>
                        
                        <div class="bg-gray-900 p-6 rounded-xl border-2 border-blue-500/50 mb-6 w-full max-w-3xl shadow-xl">
                            <p class="text-xl text-yellow-300 mb-3"><i data-lucide="pencil" class="inline w-5 h-5 mr-1"></i> æ¥å‡ºä¸‹ä¸€å¥æ­Œè©</p>
                            <p class="text-2xl md:text-4xl font-black text-white leading-relaxed mb-4">${data.question || 'è³‡æ–™éºå¤±'}</p>
                            <p class="text-xl font-bold text-red-400">${data.hint || ''}</p>
                            
                            <!-- B é¡åˆ¥éŸ³è¨Šï¼šå·²ç§»è‡³å•é¡Œå€ï¼Œä¾›é»æ“Šæ’­æ”¾å›æƒ³ -->
                            <div class="mt-4 w-full bg-blue-950/50 p-3 rounded border border-blue-500/30">
                                <p class="text-sm text-blue-300 mb-2 flex items-center justify-center">
                                    <i data-lucide="music" class="w-4 h-4 mr-1"></i> é»æ“Šæ’­æ”¾éŸ³è¨Šè¼”åŠ©å›æƒ³
                                </p>
                                <!-- ç§»é™¤ autoplay -->
                                <audio id="question-audio-${label}" controls src="${data.audio}" class="w-full"></audio>
                            </div>
                            <!-- çµæŸ B é¡åˆ¥éŸ³è¨Š -->
                        </div>

                        <div id="answer-box" class="hidden w-full max-w-3xl bg-blue-900/40 p-6 rounded-lg border border-blue-500 mb-4 animate-expand">
                            <p class="text-3xl font-bold text-white">${data.answer || ''}</p>
                            <p class="text-sm text-gray-400 mt-2">${data.from || ''}</p>
                            <!-- ç§»é™¤åŸæœ¬ç­”æ¡ˆå€å¡Šçš„éŸ³è¨Š -->
                        </div>

                        <button onclick="document.getElementById('answer-box').classList.remove('hidden'); this.classList.add('hidden');" class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-full shadow-lg transition transform hover:scale-105">
                            <i data-lucide="eye" class="w-5 h-5 inline-block mr-2"></i> çœ‹ç­”æ¡ˆ
                        </button>
                    </div>
                `;
            }
            // C: ä¸»é¡Œ/å»£å‘Šæ­Œ (å·²æ›´æ–°é‚è¼¯)
            else if (card.col === 2) {
                const data = THEME_SONG_ANSWERS[card.row] || {};
                let mediaHtml = '';
                
                // --- 1. è™•ç†å•é¡Œåª’é«” (Image / Audio / MCQ Image) ---
                if(data.type === 'image' || data.type === 'mcq_image') {
                    mediaHtml = `
                        <div class="flex flex-col items-center">
                            <img src="${data.image}" class="max-h-64 rounded-lg border border-green-500 mx-auto mb-4" onerror="this.onerror=null; this.src='https://placehold.co/600x400/10B981/ffffff?text=åœ–ç‰‡è¼‰å…¥å¤±æ•—'">
                            ${data.type === 'mcq_image' ? `
                                <div class="grid grid-cols-1 gap-3 w-full max-w-sm mt-4">
                                    ${data.mcq_options.map(opt => `
                                        <div class="p-3 bg-gray-700 rounded-lg text-lg font-semibold text-white text-center border border-gray-600">
                                            ${opt.text}
                                        </div>
                                    `).join('')}
                                </div>
                            ` : ''}
                        </div>
                    `;
                } else if (data.type === 'audio') {
                    // ç§»é™¤ autoplay
                    mediaHtml = `
                        <p class="text-sm text-yellow-500 mb-2 flex items-center justify-center">
                            <i data-lucide="play" class="w-4 h-4 mr-1"></i> è«‹é»æ“Šæ’­æ”¾è²éŸ³
                        </p>
                        <audio id="active-audio" controls src="${data.audio}" class="w-full"></audio>
                    `;
                }

                // --- 2. è™•ç†ç­”æ¡ˆåª’é«” (Video / Image / Audio / Text) ---
                let answerHtml = '';
                if(data.answerType === 'video') {
                    // å½±ç‰‡ç­”æ¡ˆ (C1, C2, C4)
                    answerHtml = `
                        <p class="text-xl font-bold text-white mb-3">${data.answerText || 'å½±ç‰‡ç­”æ¡ˆ'}</p>
                        <div class="video-container">
                            <!-- ç§»é™¤ autoplay -->
                            <video id="ans-video" controls src="${data.answerVideo}" class="w-full rounded-lg"></video>
                        </div>
                        <p class="text-sm text-green-300 mt-2">è«‹é»æ“Šæ’­æ”¾è§€çœ‹ç­”æ¡ˆå½±ç‰‡</p>
                    `;
                } else if (data.answerType === 'image') {
                    // åœ–ç‰‡ç­”æ¡ˆ (C3, C5)
                    answerHtml = `
                        <p class="text-2xl font-bold text-white mb-3">${data.answerText || 'åœ–ç‰‡ç­”æ¡ˆ'}</p>
                        <img src="${data.answerImage}" class="max-h-64 rounded-lg border-4 border-green-500 shadow-xl mx-auto" 
                            onerror="this.onerror=null; this.src='https://placehold.co/600x400/10B981/ffffff?text=åœ–ç‰‡è¼‰å…¥å¤±æ•—';" 
                            alt="ç­”æ¡ˆåœ–ç‰‡">
                    `;
                } else if (data.answerType === 'audio') {
                    // éŸ³æ¨‚ç­”æ¡ˆ (Fallback, C4 å·²è¢«ç§»é™¤)
                    answerHtml = `
                        <p class="text-2xl font-bold text-white mb-3">æ­Œæ‰‹ï¼š${data.answerText || 'éŸ³æ¨‚ç­”æ¡ˆ'}</p>
                        <p class="text-sm text-yellow-500 mb-2">è«‹é»æ“Šæ’­æ”¾éŸ³æª”</p>
                        <audio id="ans-audio" controls src="${data.answerAudio}" class="w-full"></audio>
                    `;
                } else {
                    // ç´”æ–‡å­—ç­”æ¡ˆ (Fallback)
                    answerHtml = `<p class="text-3xl font-bold text-white">${data.answerText || 'æ­£ç¢ºç­”æ¡ˆ'}</p>`;
                }

                content = `
                    <div class="p-6 md:p-8 flex flex-col items-center text-center relative w-full bg-gray-800 rounded-lg">
                        ${closeBtn}
                        <h3 class="text-3xl font-bold text-green-400 mb-4">${category.name} - ${label}</h3>
                        <p class="text-xl text-yellow-300 mb-4">${data.question}</p>
                        
                        <div class="w-full max-w-3xl bg-gray-900 p-4 rounded-xl border border-green-500/30 mb-6 shadow-xl">
                            ${mediaHtml}
                        </div>

                        <div id="answer-box" class="hidden w-full max-w-3xl bg-green-900/40 p-4 rounded-lg border border-green-500 mb-4 animate-expand">
                            <p class="text-sm text-green-300 font-bold mb-2">æ­£ç¢ºç­”æ¡ˆ</p>
                            ${answerHtml}
                        </div>

                        <button onclick="document.getElementById('answer-box').classList.remove('hidden'); this.classList.add('hidden');" class="px-8 py-3 bg-green-600 hover:bg-green-700 text-white font-bold rounded-full shadow-lg transition transform hover:scale-105">
                            <i data-lucide="eye" class="w-5 h-5 inline-block mr-2"></i> çœ‹ç­”æ¡ˆ
                        </button>
                    </div>
                `;
            }
            // D: å¿«å•å¿«ç­”
            else if (card.col === 3) {
                const data = FAST_QA_ANSWERS[card.row] || {};
                let interactionAreaContent = '';
                let answerDisplayHtml = '';

                // --- ç­”æ¡ˆé¡¯ç¤ºå€å¡Š (åŒ…å«åœ–ç‰‡æˆ–ç´”æ–‡å­—) ---
                if (data.type === 'image_answer' && data.answerImage) {
                    answerDisplayHtml = `
                        <div class="flex flex-col items-center p-4">
                            <p class="text-2xl font-bold text-white mb-3">${data.answer}</p>
                            <img src="${data.answerImage}" class="max-h-64 rounded-lg border-4 border-purple-500 shadow-xl" 
                                onerror="this.onerror=null; this.src='https://placehold.co/600x400/4B5563/ffffff?text=åœ–ç‰‡è¼‰å…¥å¤±æ•—';" 
                                alt="ç­”æ¡ˆåœ–ç‰‡">
                        </div>
                    `;
                } else {
                    answerDisplayHtml = `<p class="text-3xl font-bold text-white">${data.answer}</p>`;
                }

                // --- äº’å‹•å€åŸŸ (æŒ‰éˆ•) ---
                if (data.type === 'mcq') {
                    // é¸æ“‡é¡Œ
                    interactionAreaContent = `<div class="grid grid-cols-2 gap-4 mt-4 w-full max-w-2xl">
                        ${data.options.map((opt, idx) => `
                            <button onclick="handleFastQaOption(this, ${opt.isCorrect})" class="p-4 bg-purple-700 hover:bg-purple-600 rounded-lg text-xl font-bold transition text-white">${opt.text}</button>
                        `).join('')}
                    </div>`;
                } else {
                    // ç´”æ–‡å­—å•ç­” æˆ– åœ–ç‰‡ç­”æ¡ˆ (ä¸»æŒäººæ ¹æ“šå¯¦éš›æƒ…æ³åˆ¤å®šå°éŒ¯)
                    interactionAreaContent = `
                        <div class="flex space-x-4 mt-4">
                            <button onclick="showFastQaResult(true)" class="px-6 py-3 bg-green-600 rounded-full font-bold transition transform hover:scale-105">ç­”å°</button>
                            <button onclick="showFastQaResult(false)" class="px-6 py-3 bg-red-600 rounded-full font-bold transition transform hover:scale-105">ç­”éŒ¯/çœ‹ç­”æ¡ˆ</button>
                        </div>
                    `;
                }


                content = `
                    <div class="p-6 md:p-8 flex flex-col items-center text-center relative w-full bg-gray-800 rounded-lg">
                        ${closeBtn}
                        <div class="flex justify-between w-full max-w-3xl items-center mb-4">
                            <h3 class="text-3xl font-bold text-purple-400">${category.name} - ${label}</h3>
                            <div id="timer-display" class="text-5xl font-mono font-black text-white bg-gray-900 px-4 py-2 rounded border border-purple-500">5</div>
                        </div>

                        <div id="qa-start-overlay" class="absolute inset-0 bg-gray-800/90 z-10 flex flex-col items-center justify-center rounded-lg">
                            <button onclick="startFastQa(this)" class="px-10 py-4 bg-purple-600 hover:bg-purple-500 text-white text-2xl font-bold rounded-full shadow-xl pulse-once">
                                é–‹å§‹è¨ˆæ™‚ (5ç§’)
                            </button>
                        </div>

                        <div class="w-full max-w-3xl bg-gray-900 p-8 rounded-xl border-2 border-purple-500 mb-4 min-h-[150px] flex flex-col items-center justify-center shadow-xl">
                            <p class="text-3xl md:text-4xl font-bold text-white">${data.question}</p>
                            <div id="qa-interaction-area" class="hidden w-full flex flex-col items-center">
                                ${interactionAreaContent}
                            </div>
                        </div>

                        <div id="qa-result" class="hidden mt-4 animate-expand">
                             <div id="qa-success" class="hidden flex flex-col items-center p-4 bg-green-900/80 rounded border border-green-500 w-full max-w-3xl">
                                <i data-lucide="medal" class="w-20 h-20 text-yellow-400 mb-2"></i>
                                <span class="text-3xl font-black text-yellow-400">ç­”å°äº†ï¼</span>
                             </div>
                             <div id="qa-fail" class="hidden p-4 bg-red-900/80 rounded border border-red-500 w-full max-w-3xl">
                                <p class="text-gray-300">æ­£ç¢ºç­”æ¡ˆ</p>
                                ${answerDisplayHtml}
                             </div>
                        </div>
                    </div>
                `;
            }
            // E/F: ç¶“å…¸/æœ¬åœŸ/åŠ ç¢¼
            else {
                const isF = card.col === 5;
                const data = CLASSIC_QA_ANSWERS[`${isF ? 'F' : 'E'}${card.row}`] || {};
                const color = isF ? 'yellow' : 'indigo';
                const textColor = isF ? 'text-yellow-400' : 'text-indigo-400';
                const borderColor = isF ? 'border-yellow-500' : 'border-indigo-500';
                const bgColor = isF ? 'bg-yellow-900/40' : 'bg-indigo-900/40';
                
                let mediaHtml = '';
                if (data.type === 'audio-line') {
                    // ç§»é™¤ autoplay
                    mediaHtml = `
                        <p class="text-sm text-yellow-500 mb-2 flex items-center justify-center">
                            <i data-lucide="play" class="w-4 h-4 mr-1"></i> è«‹é»æ“Šæ’­æ”¾è²éŸ³
                        </p>
                        <audio id="active-audio" controls src="${data.audio}" class="w-full max-w-md my-4"></audio>
                    `;
                }

                content = `
                    <div class="p-6 md:p-8 flex flex-col items-center text-center relative w-full bg-gray-800 rounded-lg">
                        ${closeBtn}
                        <h3 class="text-3xl font-bold ${textColor} mb-4">${category.name} - ${label}</h3>
                        
                        <div class="bg-gray-900 p-6 rounded-xl border-2 ${borderColor}/50 mb-6 w-full max-w-3xl shadow-xl">
                            <p class="text-2xl md:text-3xl font-black text-white whitespace-pre-line leading-relaxed mb-4">${data.question || 'ä¸»æŒäººè‡ªç”±å‡ºé¡Œ'}</p>
                            ${data.requirement ? `<p class="text-lg font-bold text-red-400 border-t border-gray-700 pt-2">${data.requirement}</p>` : ''}
                            ${mediaHtml}
                        </div>

                        <div id="answer-box" class="hidden w-full max-w-3xl ${bgColor} p-6 rounded-lg border ${borderColor} mb-4 animate-expand">
                            <p class="text-xl text-${color}-200 font-bold mb-2">åƒè€ƒç­”æ¡ˆ</p>
                            <p class="text-3xl font-bold text-white whitespace-pre-line">${data.answerText || ''}</p>
                            <p class="text-sm text-gray-400 mt-2">${data.from || ''}</p>
                        </div>

                        <button onclick="document.getElementById('answer-box').classList.remove('hidden'); this.classList.add('hidden');" class="px-8 py-3 bg-${color}-600 hover:bg-${color}-700 text-white font-bold rounded-full shadow-lg transition transform hover:scale-105">
                            <i data-lucide="eye" class="w-5 h-5 inline-block mr-2"></i> æ­æ›‰ç­”æ¡ˆ
                        </button>
                    </div>
                `;
            }

            return content;
        }

        // --- å¿«å•å¿«ç­” å°ˆå±¬é‚è¼¯ (ä¿æŒä¸è®Š) ---
        window.startFastQa = function(btn) {
            document.getElementById('qa-start-overlay').classList.add('hidden');
            document.getElementById('qa-interaction-area').classList.remove('hidden');
            
            let time = 5;
            const timerEl = document.getElementById('timer-display');
            timerEl.innerText = time;
            
            clearInterval(fastQATimerInterval);
            fastQATimerInterval = setInterval(() => {
                time--;
                timerEl.innerText = time;
                if(time <= 2) timerEl.classList.add('text-red-500', 'timer-active');
                if(time <= 0) {
                    clearInterval(fastQATimerInterval);
                    timerEl.classList.remove('timer-active');
                }
            }, 1000);
        }

        window.handleFastQaOption = function(btn, isCorrect) {
            clearInterval(fastQATimerInterval);
            document.getElementById('qa-interaction-area').classList.add('hidden');
            showFastQaResult(isCorrect);
        }

        window.showFastQaResult = function(isSuccess) {
            clearInterval(fastQATimerInterval);
            document.getElementById('qa-result').classList.remove('hidden');
            document.getElementById('qa-interaction-area').classList.add('hidden');
            if(isSuccess) {
                document.getElementById('qa-success').classList.remove('hidden');
                document.getElementById('qa-success').classList.add('flex');
                document.getElementById('qa-fail').classList.add('hidden'); // ç¢ºä¿å¤±æ•—éš±è—
            } else {
                document.getElementById('qa-fail').classList.remove('hidden');
                document.getElementById('qa-success').classList.add('hidden'); // ç¢ºä¿æˆåŠŸéš±è—
            }
        }

        // --- é é¢æ¸²æŸ“å‡½å¼ ---
        
        function renderHomePage() {
            setVideoBackground(VIDEO_URLS.HOME);
            gameModal.classList.add('hidden'); 
            
            // ç¢ºä¿å½±ç‰‡åˆå§‹æ¸…æ™°ï¼Œé®ç½©åˆå§‹é€æ˜
            document.getElementById('video-background').classList.remove('video-dimmed');
            dimmingOverlay.classList.remove('opacity-60');
            dimmingOverlay.classList.add('opacity-0');
            
            // éš±è— Menu Modal çš„ Home æŒ‰éˆ•
            modalCloseHomeBtn.classList.add('hidden');

            appContainer.innerHTML = `
                <!-- Full-screen interactive wrapper -->
                <div id="home-wrapper" 
                    class="absolute inset-0 z-10 flex flex-col items-center justify-end p-8">
                    
                    <div class="flex-grow w-full"></div> <!-- Pushes the button down -->

                    <!-- æŒ‰éˆ•é è¨­å¯è¦‹ï¼Œç§»é™¤ btn-hidden é¡ -->
                    <button id="menu-button" 
                        onclick="renderMenu()" 
                        class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white text-lg font-bold rounded-full shadow-2xl border-4 border-white animate-pulse-slow">
                        é¸æ“‡éŠæˆ²æ¨¡å¼
                    </button>
                </div>
            `;
            
            lucide.createIcons();
        }

        function renderMenu() {
            setVideoBackground(VIDEO_URLS.HOME);
            
            // ç¢ºä¿å½±ç‰‡è®Šæš—
            document.getElementById('video-background').classList.add('video-dimmed');
            dimmingOverlay.classList.remove('opacity-0');
            dimmingOverlay.classList.add('opacity-60');

            // é¡¯ç¤º Menu Modal çš„ Home æŒ‰éˆ•
            modalCloseHomeBtn.classList.remove('hidden');

            // æ›¿æ› Modal wrapper çš„æ¨£å¼ä»¥é©æ‡‰èœå–® (è¼ƒå°)
            modalWrapper.classList.remove('max-w-2xl', 'max-w-md', 'border-yellow-400');
            modalWrapper.classList.add('max-w-lg', 'border-red-600');

            // é¡¯ç¤º Modal
            gameModal.classList.remove('hidden');
            setTimeout(() => {
                modalWrapper.classList.remove('scale-95', 'opacity-0');
                modalWrapper.classList.add('scale-100', 'opacity-100');
            }, 10);
            
            modalContent.innerHTML = `
                <div class="space-y-4 p-6 pt-10">
                    <h3 class="text-4xl font-bold text-center text-white text-shadow mb-4">é¸æ“‡éŠæˆ²æ¨¡å¼</h3>
                    <!-- å°å‘æ–°çš„ç´…è‰²çƒæ­¥é©Ÿæµç¨‹ -->
                    <button onclick="navigateTo(() => renderRedBallTutorialSteps(0))" class="w-full p-6 bg-red-600 hover:bg-red-700 rounded-lg flex items-center justify-center space-x-4 transition transform hover:scale-105 shadow-xl">
                        <span class="text-5xl">ğŸ”´</span>
                        <div class="text-left">
                            <div class="text-2xl font-black">ç´…ç™½æ‹³ç‹çˆ­éœ¸æˆ°</div>
                            <div class="text-sm opacity-80">å‹•ä½œæ•™å­¸ & è¦å‰‡èªªæ˜</div>
                        </div>
                    </button>
                    <!-- å°å‘ç™½è‰²çƒæ­¥é©Ÿæµç¨‹ -->
                    <button onclick="navigateTo(() => renderWhiteBallTutorialSteps(0))" class="w-full p-6 bg-white hover:bg-gray-200 text-gray-900 rounded-lg flex items-center justify-center space-x-4 transition transform hover:scale-105 shadow-xl">
                        <span class="text-5xl">âšª</span>
                        <div class="text-left">
                            <div class="text-2xl font-black">ç´…ç™½å¤§æ­Œæ˜Ÿ</div>
                            <div class="text-sm opacity-80">æ¶ç­”æ¨¡å¼ & éŠæˆ²æµç¨‹</div>
                        </div>
                    </button>
                </div>
            `;
            lucide.createIcons();
        }
        
        function navigateTo(renderer) {
            // éš±è— Menu Modal çš„ Home æŒ‰éˆ•
            modalCloseHomeBtn.classList.add('hidden');
            
            // éš±è— Modal (å¸¶å‹•ç•«)
            modalWrapper.classList.remove('scale-100', 'opacity-100');
            modalWrapper.classList.add('scale-95', 'opacity-0');

            appContainer.style.opacity = '0';
            setTimeout(() => {
                gameModal.classList.add('hidden'); // å®Œå…¨éš±è— Modal
                
                // æ¢å¾© Modal wrapper æ¨£å¼ç‚ºé¡Œç›®å¡ç‰‡æ¨¡å¼ (è¼ƒå¤§ï¼Œé€™æ˜¯é è¨­)
                modalWrapper.classList.remove('max-w-lg', 'max-w-md', 'border-red-600');
                modalWrapper.classList.add('max-w-2xl', 'border-yellow-400');

                renderer();
                appContainer.style.opacity = '1';
                lucide.createIcons();
            }, 300);
        }

        /**
         * è™•ç†ç´…è‰²çƒæ­¥é©Ÿå°èˆªï¼šåˆ‡æ›ç•¶å‰æ­¥é©Ÿä¸¦é‡æ–°æ¸²æŸ“
         * @param {number} direction - 1 for next, -1 for previous
         */
        window.changeRedStep = function(direction) {
            const newStep = currentRedStep + direction;
            if (newStep >= 0 && newStep < RED_BALL_STEPS.length) {
                renderRedBallTutorialSteps(newStep);
            } else if (newStep >= RED_BALL_STEPS.length) {
                 // æœ€å¾Œä¸€æ­¥æŒ‰ã€Œä¸‹ä¸€æ­¥ã€å‰‡å°å‘å‹•ä½œæ•™å­¸æ¿
                navigateTo(renderRedBallActionTutorial); 
            }
        }
        
        /**
         * æ¸²æŸ“ç´…è‰²çƒæ­¥é©Ÿå¼•å°å¡ç‰‡ (ç´…ç™½æ‹³ç‹çˆ­éœ¸æˆ°)
         * @param {number} stepIndex - è¦é¡¯ç¤ºçš„æ­¥é©Ÿç´¢å¼• (0-based)
         */
        window.renderRedBallTutorialSteps = function(stepIndex) {
            setVideoBackground(VIDEO_URLS.GAME);
            
            // ç¢ºä¿éŠæˆ²æ¨¡å¼ä¸‹å½±ç‰‡è®Šæš—
            document.getElementById('video-background').classList.add('video-dimmed');
            dimmingOverlay.classList.remove('opacity-0');
            dimmingOverlay.classList.add('opacity-60');

            currentRedStep = stepIndex; // æ›´æ–°è¿½è¹¤è®Šæ•¸

            const step = RED_BALL_STEPS[currentRedStep];
            const totalSteps = RED_BALL_STEPS.length;
            
            const prevDisabled = currentRedStep === 0;
            // æœ€å¾Œä¸€æ­¥æŒ‰éˆ•è®Šæˆ "é–‹å§‹å‹•ä½œæ•™å­¸"
            const nextButtonText = currentRedStep === totalSteps - 1 ? 'é–‹å§‹å‹•ä½œæ•™å­¸' : 'ä¸‹ä¸€æ­¥';
            const nextButtonIcon = currentRedStep === totalSteps - 1 ? 'hand-metal' : 'arrow-right';
            const nextButtonColor = currentRedStep === totalSteps - 1 ? 'bg-green-600 hover:bg-green-700' : 'bg-yellow-500 hover:bg-yellow-400 text-gray-900';


            appContainer.innerHTML = `
                <div class="w-full max-w-lg md:max-w-xl mx-auto flex flex-col items-center justify-center py-10 min-h-screen relative">
                    
                    <!-- æ–°å¢ï¼šè¿”å›é¦–é æŒ‰éˆ• -->
                    <button onclick="renderHomePage()" class="absolute top-4 right-4 z-20 px-3 py-1 bg-gray-800/80 hover:bg-gray-700 text-white rounded-lg text-sm border border-gray-600 shadow-lg transition flex items-center space-x-1">
                        <i data-lucide="home" class="w-4 h-4"></i>
                        <span>é¦–é </span>
                    </button>
                    
                    <!-- æ­¥é©Ÿå°è¦½å¡ç‰‡ (ç¬¦åˆæˆªåœ–ä¸»é«”) -->
                    <div class="w-full bg-gray-800/90 rounded-xl shadow-2xl p-8 border border-gray-700 mb-8 flex flex-col items-center transition transform pulse-once">
                        
                        <!-- é ‚éƒ¨è³‡è¨Š -->
                        <div class="text-center mb-8">
                            <div class="flex items-center justify-center text-gray-300 mb-2">
                                <i data-lucide="disc" class="w-4 h-4 mr-2 text-white"></i>
                                <span class="text-xl font-bold">éŠæˆ²æµç¨‹èªªæ˜ (${currentRedStep + 1}/${totalSteps})</span>
                            </div>
                            <h2 class="text-lg font-semibold text-red-400">
                                ç´…ç™½æ‹³ç‹çˆ­éœ¸æˆ°
                            </h2>
                        </div>

                        <!-- æ­¥é©Ÿå…§å®¹å¡ç‰‡ (æ›´æ·±è‰²èƒŒæ™¯) -->
                        <div class="w-full bg-gray-900/70 p-8 rounded-lg mb-8 shadow-xl">
                            <h3 class="text-3xl font-black text-red-500 mb-4 text-center">
                                Step ${currentRedStep + 1} | ${step.title}
                            </h3>
                            <p class="text-lg text-gray-300 text-center whitespace-pre-line">${step.description}</p>
                        </div>

                        <!-- å°èˆªæŒ‰éˆ• -->
                        <div class="flex justify-center space-x-4 w-full">
                            <!-- ä¸Šä¸€æ­¥æŒ‰éˆ• -->
                            <button 
                                onclick="changeRedStep(-1)" 
                                class="flex-1 max-w-[150px] px-6 py-3 rounded-full font-bold transition transform ${prevDisabled ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-gray-700 hover:bg-gray-600 text-white hover:scale-105'}"
                                ${prevDisabled ? 'disabled' : ''}>
                                <i data-lucide="arrow-left" class="w-4 h-4 inline-block mr-1"></i> ä¸Šä¸€æ­¥
                            </button>
                            
                            <!-- ä¸‹ä¸€æ­¥æŒ‰éˆ• -->
                            <button 
                                onclick="changeRedStep(1)" 
                                class="flex-1 max-w-[150px] px-6 py-3 rounded-full font-bold transition transform hover:scale-105 ${nextButtonColor}">
                                <i data-lucide="${nextButtonIcon}" class="w-4 h-4 inline-block mr-1"></i> ${nextButtonText}
                            </button>
                        </div>
                    </div>
                </div>
            `;
            lucide.createIcons();
        }

        /**
         * è™•ç†å‹•ä½œæ•™å­¸å¡ç‰‡çš„ç¿»è½‰
         * @param {number} id - å‹•ä½œçš„ ID (100, 101, 102)
         */
        window.flipActionCard = function(id) {
            const cardEl = document.getElementById(`action-card-${id}`);
            if (cardEl) {
                cardEl.classList.toggle('is-flipped');
            }
        }

        /**
         * æ¸²æŸ“ç´…ç™½æ‹³ç‹çˆ­éœ¸æˆ°çš„å‹•ä½œæ•™å­¸æ¿ (æ ¹æ“šä½¿ç”¨è€…åœ–ç‰‡è¨­è¨ˆ)
         */
        window.renderRedBallActionTutorial = function() {
            setVideoBackground(VIDEO_URLS.GAME);
            
            // ç¢ºä¿éŠæˆ²æ¨¡å¼ä¸‹å½±ç‰‡è®Šæš—
            document.getElementById('video-background').classList.add('video-dimmed');
            dimmingOverlay.classList.remove('opacity-0');
            dimmingOverlay.classList.add('opacity-60');

            // æ ¹æ“š PUNCH_KING_ACTIONS è³‡æ–™ç”Ÿæˆå¡ç‰‡ HTML
            const actionCardsHtml = PUNCH_KING_ACTIONS.map((action, index) => {
                // æ ¹æ“šé™£ç‡Ÿè¨­å®šé¡è‰²
                // æ³¨æ„ï¼šé€™è£¡ 'white' çš„ card-front é¡è‰²æ˜¯ bg-white text-gray-900ï¼Œè¦å’Œ 'red' å€åˆ†
                const bg = action.color === 'red' ? 'bg-red-600' : (action.color === 'white' ? 'bg-white text-gray-900' : 'bg-yellow-500 text-gray-900');
                const border = action.color === 'red' ? 'border-red-400' : (action.color === 'white' ? 'border-gray-400' : 'border-yellow-400');
                
                return `
                    <div id="action-card-${action.id}" class="card-container h-[400px]" onclick="flipActionCard(${action.id})">
                        <!-- Front Face: Name and Flip Button -->
                        <div class="card-face card-front ${bg} p-6 border-4 ${border} hover:shadow-2xl">
                            <span class="text-8xl">${action.emoji}</span>
                            <div class="mt-6 text-center">
                                <p class="text-4xl font-black">${action.name}</p>
                                <button class="mt-4 px-4 py-2 bg-black/30 rounded-full font-bold transition text-white hover:bg-black/50">
                                    é»æ“Šç¿»ç‰Œ
                                </button>
                            </div>
                        </div>

                        <!-- Back Face: Image and Instruction (å·²å„ªåŒ–ç‚ºç›´å¼ä½ˆå±€) -->
                        <div class="card-face card-back bg-gray-900/90 p-4 border-4 ${border} overflow-hidden">
                            <div class="flex flex-col items-center justify-start w-full h-full text-center py-2">
                                <img src="${action.actionImage}" 
                                     class="w-full h-auto max-h-64 object-contain rounded-lg border-2 ${border} mb-4 shadow-lg" 
                                     alt="å‹•ä½œç¤ºç¯„åœ–: ${action.name}"
                                     onerror="this.onerror=null; this.src='https://placehold.co/200x300/4B5563/ffffff?text=ç›´å¼åœ–ç‰‡è¼‰å…¥å¤±æ•—'">
                                
                                <div class="p-2 w-full text-center border-t border-gray-700 pt-3 flex-1 flex items-center justify-center">
                                    <!-- ç°¡åŒ–ç‚ºä¸€å¥è©± -->
                                    <p class="text-lg font-semibold text-white">${action.instruction}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
            }).join('');

            appContainer.innerHTML = `
                <div class="w-full flex flex-col items-center py-10 relative min-h-screen">
                    
                    <!-- æ–°å¢ï¼šè¿”å›é¦–é æŒ‰éˆ• -->
                    <button onclick="renderHomePage()" class="absolute top-4 right-4 z-20 px-3 py-1 bg-gray-800/80 hover:bg-gray-700 text-white rounded-lg text-sm border border-gray-600 shadow-lg transition flex items-center space-x-1">
                        <i data-lucide="home" class="w-4 h-4"></i>
                        <span>é¦–é </span>
                    </button>
                    
                    <!-- æ‹³ç‹å‹•ä½œæ•™å­¸ æ¨™é¡Œ -->
                    <div class="bg-black/80 rounded-full px-6 py-3 mb-10 shadow-2xl flex items-center animate-bounce-slow">
                        <span class="text-3xl font-black text-white flex items-center">
                            <span class="text-red-500 text-6xl mr-3 leading-none">ğŸ”´</span> æ‹³ç‹å‹•ä½œæ•™å­¸
                        </span>
                    </div>

                    <!-- ä¸‰å¼µå‹•ä½œå¡ç‰‡ (ä½¿ç”¨ sm:grid-cols-3 ç¢ºä¿æ‰‹æ©Ÿä¸Šç›´åˆ—ï¼Œæ¡Œé¢æ©«åˆ—) -->
                    <div class="w-full max-w-5xl grid grid-cols-1 sm:grid-cols-3 gap-6 px-4 mb-12">
                        ${actionCardsHtml}
                    </div>

                    <!-- åº•éƒ¨å°èˆª (æ”¾åœ¨å¡ç‰‡ä¸‹æ–¹ï¼Œä¸æœƒé®æ“‹) -->
                    <div class="mt-4 flex space-x-4">
                        <button onclick="navigateTo(() => renderRedBallTutorialSteps(${RED_BALL_STEPS.length - 1}))" class="px-6 py-3 bg-gray-700/50 hover:bg-gray-700 text-white rounded-full text-lg border border-gray-600 transition transform hover:scale-105">
                            <i data-lucide="arrow-left" class="w-5 h-5 inline-block mr-2"></i> è¿”å›æµç¨‹èªªæ˜
                        </button>
                        <!-- ç§»é™¤å¤šé¤˜çš„è¿”å›é¸å–®æŒ‰éˆ• -->
                    </div>
                </div>
            `;
            lucide.createIcons();
        }


        /**
         * è™•ç†ç™½è‰²çƒæ­¥é©Ÿå°èˆªï¼šåˆ‡æ›ç•¶å‰æ­¥é©Ÿä¸¦é‡æ–°æ¸²æŸ“
         * @param {number} direction - 1 for next, -1 for previous
         */
        window.changeWhiteStep = function(direction) {
            const newStep = currentWhiteStep + direction;
            if (newStep >= 0 && newStep < WHITE_BALL_STEPS.length) {
                renderWhiteBallTutorialSteps(newStep);
            } else if (newStep >= WHITE_BALL_STEPS.length) {
                // æœ€å¾Œä¸€æ­¥æŒ‰ã€Œä¸‹ä¸€æ­¥ã€å‰‡å°å‘ä¸»æ¿
                navigateTo(renderWhiteBallBoard);
            }
        }

        /**
         * æ¸²æŸ“ç™½è‰²çƒæ­¥é©Ÿå¼•å°å¡ç‰‡ (ç´…ç™½å¤§æ­Œæ˜Ÿ)
         * @param {number} stepIndex - è¦é¡¯ç¤ºçš„æ­¥é©Ÿç´¢å¼• (0-based)
         */
        window.renderWhiteBallTutorialSteps = function(stepIndex) {
            setVideoBackground(VIDEO_URLS.GAME);
            
            // ç¢ºä¿éŠæˆ²æ¨¡å¼ä¸‹å½±ç‰‡è®Šæš—
            document.getElementById('video-background').classList.add('video-dimmed');
            dimmingOverlay.classList.remove('opacity-0');
            dimmingOverlay.classList.add('opacity-60');

            currentWhiteStep = stepIndex;

            const step = WHITE_BALL_STEPS[currentWhiteStep];
            const totalSteps = WHITE_BALL_STEPS.length;
            
            const prevDisabled = currentWhiteStep === 0;
            // æœ€å¾Œä¸€æ­¥æŒ‰éˆ•è®Šæˆ "é–‹å§‹éŠæˆ²"
            const nextButtonText = currentWhiteStep === totalSteps - 1 ? 'é–‹å§‹éŠæˆ²' : 'ä¸‹ä¸€æ­¥';
            const nextButtonIcon = currentWhiteStep === totalSteps - 1 ? 'play' : 'arrow-right';
            const nextButtonColor = currentWhiteStep === totalSteps - 1 ? 'bg-green-600 hover:bg-green-700' : 'bg-yellow-500 hover:bg-yellow-400 text-gray-900';


            appContainer.innerHTML = `
                <div class="w-full max-w-lg md:max-w-xl mx-auto flex flex-col items-center justify-center py-10 min-h-screen relative">
                    
                    <!-- æ–°å¢ï¼šè¿”å›é¦–é æŒ‰éˆ• -->
                    <button onclick="renderHomePage()" class="absolute top-4 right-4 z-20 px-3 py-1 bg-gray-800/80 hover:bg-gray-700 text-white rounded-lg text-sm border border-gray-600 shadow-lg transition flex items-center space-x-1">
                        <i data-lucide="home" class="w-4 h-4"></i>
                        <span>é¦–é </span>
                    </button>
                    
                    <!-- æ­¥é©Ÿå°è¦½å¡ç‰‡ (ç¬¦åˆæˆªåœ–ä¸»é«”) -->
                    <div class="w-full bg-gray-800/90 rounded-xl shadow-2xl p-8 border border-gray-700 mb-8 flex flex-col items-center transition transform pulse-once">
                        
                        <!-- é ‚éƒ¨è³‡è¨Š -->
                        <div class="text-center mb-8">
                            <div class="flex items-center justify-center text-gray-300 mb-2">
                                <i data-lucide="disc" class="w-4 h-4 mr-2 text-white"></i>
                                <span class="text-xl font-bold">éŠæˆ²æµç¨‹èªªæ˜ (${currentWhiteStep + 1}/${totalSteps})</span>
                            </div>
                            <h2 class="text-lg font-semibold text-red-400">
                                ç´…ç™½å¤§æ­Œæ˜Ÿ (æ¶ç­”æ¨¡å¼)
                            </h2>
                        </div>

                        <!-- æ­¥é©Ÿå…§å®¹å¡ç‰‡ (æ›´æ·±è‰²èƒŒæ™¯ï¼Œç¬¦åˆæˆªåœ–ä¸­çš„å…§å±¤å¡ç‰‡) -->
                        <div class="w-full bg-gray-900/70 p-8 rounded-lg mb-8 shadow-xl">
                            <h3 class="text-3xl font-black text-yellow-500 mb-4 text-center">
                                Step ${currentWhiteStep + 1} | ${step.title}
                            </h3>
                            <p class="text-lg text-gray-300 text-center whitespace-pre-line">${step.description}</p>
                        </div>

                        <!-- å°èˆªæŒ‰éˆ• -->
                        <div class="flex justify-center space-x-4 w-full">
                            <!-- ä¸Šä¸€æ­¥æŒ‰éˆ• -->
                            <button 
                                onclick="changeWhiteStep(-1)" 
                                class="flex-1 max-w-[150px] px-6 py-3 rounded-full font-bold transition transform ${prevDisabled ? 'bg-gray-700 text-gray-500 cursor-not-allowed' : 'bg-gray-700 hover:bg-gray-600 text-white hover:scale-105'}"
                                ${prevDisabled ? 'disabled' : ''}>
                                <i data-lucide="arrow-left" class="w-4 h-4 inline-block mr-1"></i> ä¸Šä¸€æ­¥
                            </button>
                            
                            <!-- ä¸‹ä¸€æ­¥æŒ‰éˆ• -->
                            <button 
                                onclick="changeWhiteStep(1)" 
                                class="flex-1 max-w-[150px] px-6 py-3 rounded-full font-bold transition transform hover:scale-105 ${nextButtonColor}">
                                <i data-lucide="${nextButtonIcon}" class="w-4 h-4 inline-block mr-1"></i> ${nextButtonText}
                            </button>
                        </div>
                    </div>
                </div>
            `;
            lucide.createIcons();
        }


        // ç´…ç™½å¤§æ­Œæ˜Ÿ éŠæˆ²ä¸»æ¿ (å·²æ›´æ–° Home æŒ‰éˆ•æ¨£å¼)
        function renderWhiteBallBoard() {
            setVideoBackground(VIDEO_URLS.GAME);
            
            // ç¢ºä¿éŠæˆ²æ¨¡å¼ä¸‹å½±ç‰‡è®Šæš—
            document.getElementById('video-background').classList.add('video-dimmed');
            dimmingOverlay.classList.remove('opacity-0');
            dimmingOverlay.classList.add('opacity-60');

            // ç”Ÿæˆå¡ç‰‡è³‡æ–™
            cardData = [];
            let idCounter = 1;
            for (let col = 0; col < CATEGORY_COLORS.length; col++) {
                for (let row = 0; row < ROW_COUNT; row++) {
                    cardData.push({ 
                        id: idCounter++, 
                        col, 
                        row, 
                        isFlipped: false 
                    });
                }
            }
            
            let gridHtml = '';
            
            // 1. Header (ä½”ç”¨ 6 å€‹æ¬„ä½)
            gridHtml += CATEGORY_COLORS.map(cat => `
                <div class="category-column-header-cell ${cat.header_bg} ${cat.text} shadow-lg border-b-4 border-black/20">
                    <div class="flex flex-col items-center">
                        <i data-lucide="${cat.icon}" class="w-4 h-4 mb-0.5"></i>
                        <span>${cat.name}</span>
                    </div>
                </div>
            `).join('');

            // 2. Cards (6 x 5 = 30 å¼µ)
            for (let row = 0; row < ROW_COUNT; row++) {
                for (let col = 0; col < CATEGORY_COLORS.length; col++) {
                    const card = cardData.find(c => c.col === col && c.row === row);
                    const cat = CATEGORY_COLORS[col];
                    const label = `${CATEGORY_LETTERS[col]}${row + 1}`;

                    // Grid Item: ä½”ç”¨ 1 æ¬„ä½
                    gridHtml += `
                        <div id="card-${card.id}" class="card-container" onclick="flipCard(${card.id})">
                            <div class="card-face card-front ${cat.bg} ${cat.text} hover:${cat.hover} transition duration-300">
                                <span class="text-3xl font-black drop-shadow-md">${label}</span>
                            </div>
                            <div class="card-face card-back">
                                <i data-lucide="check" class="w-8 h-8 text-green-400"></i>
                                <span class="text-xs font-bold text-green-400 mt-1">Done</span>
                            </div>
                        </div>
                    `;
                }
            }


            appContainer.innerHTML = `
                <div class="w-full flex flex-col items-center max-w-7xl pt-4 px-2 relative"> <!-- åŠ ä¸Š relative è®“ Home æŒ‰éˆ•å®šä½ -->
                    <!-- Home button fixed to the top right of the container (ä½¿ç”¨æ–°çš„æ¨£å¼) -->
                    <button onclick="renderHomePage()" class="absolute top-4 right-4 z-20 px-3 py-1 bg-gray-800/80 hover:bg-gray-700 text-white rounded-lg text-sm border border-gray-600 shadow-lg transition flex items-center space-x-1">
                        <i data-lucide="home" class="w-4 h-4"></i>
                        <span>é¦–é </span>
                    </button>
                    
                    <!-- Centered Title (æ–°é¢¨æ ¼) -->
                    <div class="bg-black/80 rounded-full px-8 py-3 mb-6 shadow-2xl flex items-center animate-bounce-slow">
                        <span class="text-4xl font-black text-white flex items-center">
                            <span class="text-red-500 text-6xl mr-3 leading-none">âšª</span> ç´…ç™½å¤§æ­Œæ˜Ÿ
                        </span>
                    </div>
                    
                    <p class="text-gray-300 text-sm mb-3 text-shadow text-center">
                        éŠæˆ²å¡ç‰‡ä¸»æ¿ï¼š30 å¼µå¡ç‰‡å·²å®Œæ•´å‘ˆç¾æ–¼ç•«é¢ä¸­ã€‚
                    </p>

                    <div id="game-board-grid" class="mb-4">
                        ${gridHtml}
                    </div>
                </div>
            `;
            lucide.createIcons();
        }

        // å•Ÿå‹•: è®Šæ›´ç‚ºå…ˆæ¸²æŸ“é¦–é 
        window.onload = renderHomePage;

    </script>
</body>
</html>
